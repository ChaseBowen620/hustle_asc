[Unit]
Description=Hustle Django Backend
After=network.target

[Service]
Type=exec
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/hustle_asc/backend
Environment=PATH=/home/ubuntu/.venv/bin
ExecStart=/home/ubuntu/.venv/bin/gunicorn --bind 0.0.0.0:8000 --workers 3 backend.wsgi:application
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
